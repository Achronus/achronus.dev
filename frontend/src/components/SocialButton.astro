---
import type { SocialIcon } from "@/types/common";

const { name, url, type, colour } = Astro.props as SocialIcon;
---

<a
  class:list={[
    `btn btn-primary ${name}-btn`,
    "tw-rounded-full tw-w-12 tw-h-12 tw-border-0 hover:!tw-bg-black-theme tw-transition-all",
  ]}
  href={url}
  role="button"
  style={{
    backgroundColor: colour,
  }}
>
  <i
    class:list={[`fa-${type} fa-${name}`, "tw-text-[28px] tw-w-full tw-h-full"]}
  ></i>
</a>
