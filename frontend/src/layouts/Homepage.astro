---
import HomeBg from "@/assets/imgs/home-bg.jpg";

import { Head, Scripts } from "@/components/global";

type HomepageType = {
  title: string;
};

const { title } = Astro.props as HomepageType;
---

<!doctype html>
<html lang="en">
  <Head title={title} />
  <body id="homepage">
    <main
      class="tw-w-screen tw-h-screen tw-py-12"
      style={{
        backgroundImage: `url(${HomeBg.src})`,
      }}
    >
      <slot />
    </main>
    <Scripts />
  </body>
</html>

<style>
  html,
  main {
    background-position: bottom, center;
    background-repeat: repeat;
    background-size: cover;
    margin: 0;
  }
</style>
